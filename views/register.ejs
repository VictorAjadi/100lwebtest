<%- include('partials/header.ejs') %>
<div class="login-form bg-light-50 p-3 shadow">
    <form action="/exam/register" method="post">
        <div class="container">
            <h4 class="text-center"><span><img src="https://hgbcogbomoso.org/wp-content/uploads/2019/12/logosmall.png" class="logo-sizing2" alt=""></span><b> Register For The CBT Exam</b></h4>
            <div class="form-group">
                <label for="my-input">Student Name</label>
                <input id="my-input" class="form-control" type="text" name="username" required placeholder="Your Name">
            </div>
            <div class="form-group">
                <label for="my-input">Department</label>
                <input id="my-input" class="form-control" type="text" name="department" required placeholder="Your Department Full Name"  pattern=".{8,}" title="Eight or more characters">
            </div>
            <div class="form-group">
                <label for="my-input">Password</label>
                <input id="my-input" class="form-control" type="password" name="password" required placeholder="Password"  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters">
            </div>
            <div>
                <% if(error && error.length > 0){%>
                  <div class="alert alert-danger" role="alert">
                    <%= error %>
                  </div>
                <% } else if(success && success.length > 0){%>
                <div class="alert alert-success" role="alert">
                  <%= success %>
                </div>
                 <% }else{ %>
              
                <%} %>
              </div>
            <button type="submit" class="bg-header rounded text-light border-0 w-50 my-2 px-2 py-1"><b>Register</b></button>
        </div>
    </form>
</div>
<%- include('partials/footer.ejs') %>