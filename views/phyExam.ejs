               <label><input type="radio" name="q<%=  i  %>"  value="<%= phyExams.optionA %>"  class="<%= phyExams.answer %>">(a) <%= phyExams.optionA %></label>
             </div>
             <div>
               <label><input type="radio" name="q<%=  i  %>"  value="<%= phyExams.optionB %>"  class="<%= phyExams.answer %>">(b) <%= phyExams.optionB %></label>
             </div>
             <div>
               <label><input type="radio" name="q<%=  i  %>"  value="<%= phyExams.optionC %>"  class="<%= phyExams.answer %>">(c) <%= phyExams.optionC %></label>
             </div>
             <div>
               <label><input type="radio" name="q<%=  i  %>"  value="<%= phyExams.optionD %>"  class="<%= phyExams.answer %>">(d) <%= phyExams.optionD %></label>
             </div> 
         </li>
       </div>
       <% } )%>
   </ol>
  </div>

